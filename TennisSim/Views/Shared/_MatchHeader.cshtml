<div class="match-header card mb-4">
    <div class="tournament-info">
        <div class="tournament-name">@Model.Tournament?.Name</div>
        <div class="match-date">@Model.Match.Date.ToString("MMMM dd, yyyy")</div>
        <div class="round-badge">@Model.Match.Round</div>
    </div>
</div>

<style>
    .match-header {
        border: none;
        border-radius: 16px;
        box-shadow: 0 8px 30px rgba(102,126,234,0.25);
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        position: relative;
        overflow: hidden;
    }

        .match-header::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(45deg, transparent 40%, rgba(255,255,255,0.15) 50%, transparent 60%);
            animation: shine 4s infinite;
        }

    .tournament-info {
        text-align: center;
        padding: 2rem;
        color: white;
        position: relative;
        z-index: 1;
    }

    .tournament-name {
        font: 700 1.8rem/1.2 inherit;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.8px;
        text-shadow: 0 2px 8px rgba(0,0,0,0.3);
        transition: transform 0.3s ease;
    }

        .tournament-name:hover {
            transform: scale(1.03);
        }

    .match-date {
        font-size: 1rem;
        margin-bottom: 1rem;
        opacity: 0.9;
    }

    .round-badge {
        display: inline-block;
        padding: 0.6rem 1.2rem;
        background: rgba(255,255,255,0.25);
        backdrop-filter: blur(8px);
        border: 1px solid rgba(255,255,255,0.4);
        border-radius: 25px;
        font: 600 0.9rem inherit;
        text-transform: uppercase;
        letter-spacing: 0.3px;
        transition: all 0.3s ease;
    }

        .round-badge:hover {
            transform: translateY(-2px);
            background: linear-gradient(135deg, #ff5252, #d32f2f);
            box-shadow: 0 6px 25px rgba(255,107,107,0.4);
        }

    @@keyframes shine {
        0%, 100%

    {
        transform: translateX(-100%);
    }

    50% {
        transform: translateX(100%);
    }

    }

    @@media (max-width: 576px) {
        .tournament-info

    {
        padding: 1.5rem;
    }

    .tournament-name {
        font-size: 1.4rem;
    }

    .match-date {
        font-size: 0.9rem;
    }

    .round-badge {
        padding: 0.5rem 1rem;
        font-size: 0.8rem;
    }

    }</style>