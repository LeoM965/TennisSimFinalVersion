@model TennisSim.Models.ViewModels.Draw.DrawIndexViewModel
@{
    ViewData["Title"] = "Tournament Draws";
}
<link href="~/css/DrawIndex.css" rel="stylesheet" />

@if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

@if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="tournament-section">
    <h2 class="section-heading">Tournament Draws</h2>

    @if (Model.Draws?.Any() == true)
    {
        <div class="tournament-container">
            <table class="tournament-table">
                <thead>
                    <tr>
                        <th>Tournament</th>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var draw in Model.Draws)
                    {
                        <tr>
                            <td>
                                <span class="tournament-name">@draw.TournamentName</span>
                            </td>
                            <td>
                                @draw.TournamentStartDate.ToString("MMM d, yyyy")
                            </td>
                            <td>
                                <span class="category-badge @draw.Category.ToString().Replace(" ", "").ToLowerInvariant()">
                                    @draw.Category
                                </span>
                            </td>
                            <td>
                                <a href="@Url.Action("Draw", new { id = draw.Id })" class="btn-view">
                                    View Draw
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="tournament-container">
            <div class="empty-state">
                <div class="empty-state-icon">📅</div>
                <h3>No Tournament Draws Available</h3>
                <p>
                    You haven't generated any tournament draws yet.
                    <a href="@Url.Action("Index", "Tournament")">Browse tournaments</a> to get started.
                </p>
            </div>
        </div>
    }
</div>